#!/bin/bash

# https://jupyter-docker-stacks.readthedocs.io/en/latest/using/selecting.html
# https://hub.docker.com/r/jupyter/scipy-notebook/tags/
docker run -it --rm \
  -u $(id -u):$(id -g) \
  -e HOME=$HOME \
  -e USER=$USER \
  -v $HOME:$HOME \
  -w "$PWD" \
  jupyter/scipy-notebook:ea01ec4d9f57 python "$@"
